{
    "name": "sierratecnologia/pedreiro",
    "description": ":package_description",
    "keywords": [
        "sierratecnologia",
        "pedreiro"
    ],
    "homepage": "https://github.com/sierratecnologia/pedreiro",
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Sierra",
            "email": "ricardo@ricasolucoes.com.br",
            "homepage": "https://ricasolucoes.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "sierratecnologia/former": "dev-master",
        "ricardosierra/minify": "dev-master",
        "ricardosierra/validate": "dev-master",
        "ricardosierra/changelog": "~1.4",
        "sierratecnologia/crudmaker": "dev-master",
        "sierratecnologia/locaravel": "dev-master",
        "google/recaptcha": "^1.2.4",
        "kartik-v/bootstrap-fileinput": "dev-master",
        "hieu-le/active": "^8.0",
        "creativeorange/gravatar": "^1.0",
        "league/csv": "^9.0",
        "rap2hpoutre/fast-excel": "^1.7|^2.0",
        "maatwebsite/excel": ">=3.1",
        "venturecraft/revisionable": ">=1.30",
        "watson/validating": "^5.0 || ^6.0",
        "ramsey/uuid": "^4.0",
        "yajra/laravel-datatables-buttons": "^4.6",
        "yajra/laravel-datatables-oracle": "^9.0",
        "spatie/laravel-validation-rules": "^2.6",
        "laracasts/presenter": ">=0.2",
        "spatie/laravel-pjax": ">=1.3",
        "anahkiasen/html-object": "^1.4",
        "laravel/helpers": "^1.1",
        "graham-campbell/markdown": "^13.0",
        "laravelcollective/html": "^6.0|^7.0",
        "laracasts/flash": "^3.0",
        "jeroennoten/laravel-adminlte": "^3.4",
        "symfony/yaml": ">=2.5",
        "ricardosierra/laravel-haml": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Pedreiro\\": "src"
        },
        "files": [
            "utils/funcs/load-laravel.php",
            "utils/funcs/helpers.php",
            "utils/funcs/helperSlugify.php",
            "utils/funcs/Reflection.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pedreiro\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "repositories": [{"type": "path","url":"../**","options":{"symlink": true}}],
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pedreiro\\PedreiroServiceProvider"
            ],
            "aliases": {
                "Pedreiro": "Pedreiro\\PedreiroFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}